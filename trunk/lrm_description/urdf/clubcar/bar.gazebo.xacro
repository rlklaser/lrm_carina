<robot
	xmlns:xi="http://www.w3.org/2001/XInclude"
	xmlns:xacro="http://ros.org/wiki/xacro"
>
	<xacro:macro
		name="bar_gazebo"
		params="position side"
	>
		<gazebo reference="${position}_${side}_bar_link" />
	</xacro:macro>

	<xacro:macro
		name="bar_transmission"
		params="position side"
	>
		<transmission
			type="pr2_mechanism_model/SimpleTransmission"
			name="${position}_${side}_bar_trans"
		>
			<actuator name="${position}_${side}_bar_link" />
			<joint name="joint_${position}_${side}_bar" />
			<mechanicalReduction>1.0</mechanicalReduction>
			<motorTorqueConstant>1</motorTorqueConstant>
		</transmission>
	</xacro:macro>
</robot>