<?xml version="1.0"?> 

<launch>

	<arg name="use_sim_time" default="true" />

	<!-- set use_sim_time flag -->
	<group if="$(arg use_sim_time)">
		<param name="/use_sim_time" value="true" />
	</group>

	<!-- the -r option for gazebo disables ogre, therefore, no graphics card 
		is needed. However, no image generation is possible. -->
	<!-- the -u (pause) option for start paused -->
	<!-- NAO TROCAR O NOME DO NODE... precisar ser sempre "gazebo" - bug do ros -->
	<node name="gazebo" pkg="gazebo" type="gazebo"
		args="-u $(find rosbombeiros_simulator)/worlds/empty.world"
		respawn="true" 
		output="screen" 
	/>

</launch>
