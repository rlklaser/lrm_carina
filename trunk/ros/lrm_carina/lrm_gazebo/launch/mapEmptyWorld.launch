<!--
 * Desc: This program launches an empty world in Gazebo
 * Author: Siddhant Ahuja
-->
<launch>
	<param
		name="/use_sim_time"
		value="true" />

	<node
		name="gazebo"
		pkg="gazebo"
		type="gazebo"
		args="-u $(find lrm_gazebo)/worlds/empty.world"
		respawn="false"
		output="screen" />

	<node
		name="gazebo_gui"
		pkg="gazebo"
		type="gui"
		respawn="false"
		output="screen" />

</launch>
