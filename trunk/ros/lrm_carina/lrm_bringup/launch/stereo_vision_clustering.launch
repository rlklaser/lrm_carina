		>
			<remap
				from="points_in"
				to="points_stat" />
			<remap
				from="~points_out"
				to="points_cluster_rgb" />
		</node>

		<node
			name="region_growing_seg"
			pkg="lrm_wrappers"
			type="region_growing"
			respawn="true"
			output="screen"
		>
