		<node
			pkg="nodelet"
			type="nodelet"
			name="flatten_ground_filter_node"
			args="load lrm_stereo/flatten_ground /camera_nodelet_manager --no-bond"
			output="screen"
			respawn="true"
		>
			<remap
				from="points_in"
				to="ground_points_through_voxel" />
			<remap
				from="~points_out"
