<launch>

    <!--
	<param
		name="/use_sim_time"
		value="true" />
	-->
	
	<include file="$(find lrm_bringup)/launch/odometry_wheel.launch" />
	<include file="$(find lrm_bringup)/launch/odometry_gps.launch" />
	<include file="$(find lrm_bringup)/launch/odometry_ekf.launch" />
	<include file="$(find lrm_bringup)/launch/odometry_refine.launch" />

	<node
		name="odom_relay"
		pkg="topic_tools"
		type="relay"
		args="/wheel_odometry/odom /odom"
		respawn="true"
		output="screen" />

<!-- 
	<node
		name="markers"
		type="pose_markers"
		pkg="lrm_odometry"
		output="screen"
	>
		<remap
			from="odom"
			to="/gps_odometry/odom" />

	</node>
-->

	<node
		pkg="tf"
		type="static_transform_publisher"
		name="world_map_broadcaster"
		args="0 0 0 0 0 0 world map 50"
		output="screen" />
		
	<rosparam
		command="load"
		file="$(find lrm_bringup)/params/outdoor_params.yaml" />

	<node
		pkg="lrm_outdoor"
		type="compass_tf_node"
		name="compass_frame"
		respawn="true"
		output="screen" />
		
</launch>