<robot
	xmlns:xi="http://www.w3.org/2001/XInclude"
	xmlns:xacro="http://ros.org/wiki/xacro"
>
	<link name="steer_link">
		<inertial>
			<mass value="${inertia_null_mass}" />
			<origin xyz="${inertia_null_x} ${inertia_null_y} ${inertia_null_z}" />
			<inertia
				ixx="${inertia_null_ixx}"
				ixy="${inertia_null_ixy}"
				ixz="${inertia_null_ixz}"
				iyy="${inertia_null_iyy}"
				iyz="${inertia_null_iyz}"
				izz="${inertia_null_izz}" />
		</inertial>
		<visual>
			<origin xyz="0 0 0" />
			<geometry>
				<box size="0.05 0.05 0.05" />
			</geometry>
			<material name="Green">
				<color rgba="0.0 1.0 0.0 1.0" />
			</material>
		</visual>
	</link>

	<joint
		name="steer_joint"
		type="revolute"
	>
		<limit
			effort="100"
			lower="${-M_PI/4}"
			upper="${M_PI/4}"
			velocity="10" />
		<axis xyz="0 0 1" />
		<parent link="front_axle_link" />
		<child link="steer_link" />
		<origin
			rpy="0 0 0"
			xyz="0.0 0.0 0.0" />
	</joint>
</robot>