<launch>

	<group ns="/stereo_camera">

		<include file="$(find lrm_bringup)/launch/stereo_camera.launch" />

		<rosparam file="$(find lrm_bringup)/params/cameras/bumblebee_60.yaml" />

		<node
			pkg="nodelet"
			type="nodelet"
			name="bumblebee_split_nodelet"
			args="load lrm_sensors/split_bb2 bumblebee_nodelet_manager --no-bond"
			output="screen"
			respawn="true"
		>
			<remap
				from="image_raw"
				to="/camera/image_raw" />
		</node>
		
	</group>

</launch>
