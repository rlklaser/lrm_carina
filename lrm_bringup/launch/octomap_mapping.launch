<launch>

    <!--
	<param
		name="/use_sim_time"
		value="true" />
	-->

	<rosparam
		command="load"
		file="$(find lrm_bringup)/params/octomap_parameters.yaml"
		ns="octomap_server" />


	<node
		pkg="nodelet"
		type="nodelet"
		name="octomap_server"
		args="load lrm_octomap_server/OctomapServerNodelet /camera_nodelet_manager"
	>
		<remap
			from="projected_map"
			to="/map" />
	</node>

 	
    <!-- launch-prefix="valgrind -v - -tool=callgrind"
